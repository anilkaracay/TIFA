        "@fastify/swagger-ui": "^3.0.0",
        "@fastify/websocket": "^8.3.1",
        "@prisma/client": "^5.10.2",
        "date-fns": "^4.1.0",
        "dotenv": "^16.4.5",
        "ethers": "^5.7.2",
        "fastify": "^4.26.1",
        "zod": "^3.22.4",
        "@tifa/config": "workspace:*",
        "ts-node": "^10.9.2"
    },
    "devDependencies": {
        "@types/node": "^20.19.26",
        "prisma": "^5.10.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.3.3"
    }
